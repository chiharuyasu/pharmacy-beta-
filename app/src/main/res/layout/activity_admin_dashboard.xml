<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/tvTotalProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Products: 0"
        android:textStyle="bold"
        android:paddingBottom="4dp"/>
    <TextView
        android:id="@+id/tvTotalMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Money: $0.00"
        android:paddingBottom="4dp"/>
    <TextView
        android:id="@+id/tvLowStock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Stock Products: "
        android:paddingBottom="4dp"/>
    <TextView
        android:id="@+id/tvExpiringSoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expiring Soon: "
        android:paddingBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDashboardProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:padding="8dp"/>

</LinearLayout>
