<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/backgroundWhite">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_mark_all_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark all as read"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:icon="@drawable/ic_done_all"
        app:iconTint="@color/primaryGreen"
        app:strokeColor="@color/primaryGreen"
        app:strokeWidth="1dp"
        app:cornerRadius="16dp"
        android:textColor="@color/primaryGreen"
        android:layout_gravity="end"
        android:layout_marginBottom="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_clear_all_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear all notifications"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:icon="@drawable/ic_delete"
        app:iconTint="@color/primaryRed"
        app:strokeColor="@color/primaryRed"
        app:strokeWidth="1dp"
        app:cornerRadius="16dp"
        android:textColor="@color/primaryRed"
        android:layout_gravity="end"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/text_empty_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No notifications to show."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:gravity="center"
        android:visibility="gone"
        android:padding="24dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_notifications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
